@model Contact

<h1>Edit Contact</h1>

<form asp-controller="Contacts" asp-action="Edit" class="form-horizontal" role="form">
    <input type="hidden" asp-for="ContactId">
    
    @Html.Partial("_EditContact", Model)

    <div class="form-group">
        <div class="col-sm-9 col-sm-offset-3">
            <button type="submit" class="btn btn-primary">Save Contact</button>
            <a class="btn btn-default" asp-controller="Contacts" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>